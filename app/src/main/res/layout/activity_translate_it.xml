<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundColor"
    android:orientation="vertical"
    tools:context=".TranslateItActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="16dp"
        android:paddingHorizontal="8dp">

        <Button
            android:id="@+id/translate_it_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            app:icon="@drawable/ic_round_arrow_back_ios_24"
            android:drawableTint="?attr/colorPrimary"
            app:iconTint="?attr/colorPrimary"
            />

        <TextView
            android:id="@+id/translate_it_language"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/translate_it"
            android:gravity="center"
            android:textAllCaps="true"
            android:layout_marginRight="80dp"
            android:layout_gravity="center"
            android:fontFamily="@font/proxima_nova"
            android:textSize="16sp"
            android:textFontWeight="700"
            android:textColor="?attr/colorPrimary"
            />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_marginHorizontal="16dp"
        android:paddingBottom="16dp"
        android:layout_gravity="center"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:paddingHorizontal="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/translate_it_countdown"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TIME"
                        android:fontFamily="@font/proxima_nova"
                        android:textFontWeight="700"
                        android:textSize="18sp"
                        android:textColor="?attr/textColor"
                        />



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="16dp"
                        >

                        <TextView
                            android:id="@+id/translate_it_highscore"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/highscore"
                            android:fontFamily="@font/proxima_nova"
                            android:textFontWeight="700"
                            android:textSize="16sp"
                            android:textColor="?attr/textColor"
                            android:textAllCaps="true"
                            />

                        <TextView
                            android:id="@+id/translate_it_point"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="100 POINTS"
                            android:gravity="right"
                            android:textAllCaps="true"
                            android:fontFamily="@font/proxima_nova"
                            android:textFontWeight="700"
                            android:textSize="16sp"
                            android:textColor="?attr/colorPrimary"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right">
                        <TextView
                            android:id="@+id/translate_it_attempts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3 attempts left"
                            android:fontFamily="@font/proxima_nova"
                            android:textFontWeight="500"
                            android:textAllCaps="true"
                            android:textColor="?attr/textColor"
                            android:textSize="14sp"
                            />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="128dp"
                    android:gravity="center"
                    >

                    <TextView
                        android:id="@+id/translate_it_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TITLE HERE"
                        android:gravity="center"
                        android:fontFamily="@font/proxima_nova"
                        android:textFontWeight="800"
                        android:textSize="32sp"
                        android:textAllCaps="true"
                        android:textColor="?attr/colorPrimary"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <androidx.cardview.widget.CardView
                            android:id="@+id/translate_it_choice1_card"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:backgroundTint="?attr/colorPrimaryDark"
                            app:cardCornerRadius="8dp"
                            android:elevation="32dp"
                            android:layout_margin="8dp"
                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center"
                                >

                                <TextView
                                    android:id="@+id/translate_it_choice1_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="CHOICE 1"
                                    android:textColor="@color/colorWhite"
                                    android:fontFamily="@font/proxima_nova"
                                    android:textFontWeight="700"
                                    android:paddingHorizontal="24dp"
                                    android:paddingVertical="32dp"
                                    android:ellipsize="end"
                                    android:maxWidth="300sp"
                                    />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>


                        <androidx.cardview.widget.CardView
                            android:id="@+id/translate_it_choice2_card"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:backgroundTint="?attr/colorAccent"
                            app:cardCornerRadius="8dp"
                            android:elevation="32dp"
                            android:layout_margin="8dp"
                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center"
                                >

                                <TextView
                                    android:id="@+id/translate_it_choice2_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="CHOICE 2"
                                    android:textColor="@color/colorWhite"
                                    android:fontFamily="@font/proxima_nova"
                                    android:textFontWeight="700"
                                    android:paddingHorizontal="24dp"
                                    android:paddingVertical="32dp"
                                    android:ellipsize="end"
                                    android:maxWidth="300sp"
                                    />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <androidx.cardview.widget.CardView
                            android:id="@+id/translate_it_choice3_card"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:backgroundTint="?attr/colorPrimary"
                            app:cardCornerRadius="8dp"
                            android:elevation="32dp"
                            android:layout_margin="8dp"
                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center"
                                >

                                <TextView
                                    android:id="@+id/translate_it_choice3_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="CHOICE 3"
                                    android:textColor="@color/colorWhite"
                                    android:fontFamily="@font/proxima_nova"
                                    android:textFontWeight="700"
                                    android:paddingHorizontal="24dp"
                                    android:paddingVertical="32dp"
                                    android:ellipsize="end"
                                    android:maxWidth="300sp"
                                    />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>


                        <androidx.cardview.widget.CardView
                            android:id="@+id/translate_it_choice4_card"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:backgroundTint="@color/colorTransparentWhite"
                            app:cardCornerRadius="8dp"
                            android:elevation="32dp"
                            android:layout_margin="8dp"
                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center"
                                >

                                <TextView
                                    android:id="@+id/translate_it_choice4_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="CHOICE 4"
                                    android:textColor="@color/colorWhite"
                                    android:fontFamily="@font/proxima_nova"
                                    android:textFontWeight="700"
                                    android:paddingHorizontal="24dp"
                                    android:paddingVertical="32dp"
                                    android:ellipsize="end"
                                    android:maxWidth="300sp"
                                    />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>